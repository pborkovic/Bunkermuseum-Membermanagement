# Environment Configuration Template
# Copy this file to .env.dev or .env.prod and fill in your values

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
PORT=8080

# Database Configuration
DB_HOST=postgres-dev
DB_PORT=5432
DB_NAME=bunkermuseum_dev
DB_USERNAME=bunkermuseum_dev
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO Configuration
MINIO_ENDPOINT=http://minio-dev:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_secure_minio_secret_here
MINIO_BUCKET_NAME=bunkermuseum-dev-files

# Mail Configuration
# For development (Mailpit)
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=false
MAIL_SMTP_STARTTLS=false
# For production (e.g., SendGrid, AWS SES, etc.)
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key
# MAIL_SMTP_AUTH=true
# MAIL_SMTP_STARTTLS=true

# Hibernate/JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
HIBERNATE_GENERATE_STATISTICS=true

# Connection Pool Settings
HIKARI_MAX_POOL_SIZE=20
HIKARI_MIN_IDLE=5
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_IDLE_TIMEOUT=600000
HIKARI_MAX_LIFETIME=1800000

# Vaadin Configuration
VAADIN_PRODUCTION_MODE=false
VAADIN_FRONTEND_HOTDEPLOY=true

# Logging Configuration
LOG_LEVEL_HIBERNATE=DEBUG
LOG_LEVEL_ROOT=INFO

# Security (add your own secure values)
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here